// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id
  name    String
  content String?
  iconUrl String
  Motion  Motion[]
  Stage   Stage[]
  live    Live[]

  createdAt DateTime @default(now())
}

model Motion {
  uuid     String  @unique
  name     String
  content  String?
  imageUrl String
  fileUrl  String
  live     Live[]
  license  String?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Stage {
  uuid     String  @unique
  name     String
  content  String?
  imageUrl String
  fileUrl  String
  live     Live[]
  license  String?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Room {
  uuid       String @unique
  userId     Int
  apiUrl     String
  masterKey  String
  userKey    String

  movieUrl   String
  avatarUrl  String
  motionUUID String
  stageUUID  String
}


model Live {
  uuid     String  @unique
  name     String
  content  String?
  license  String?
  imageUrl String
  fileUrl  String

  movieUrl   String
  avatarId   String
  motionUUID String
  stageUUID  String
  motion     Motion @relation(fields: [motionUUID], references: [uuid])
  stage      Stage  @relation(fields: [stageUUID], references: [uuid])

  authorId Int
  user     User @relation(fields: [authorId], references: [id])
}
